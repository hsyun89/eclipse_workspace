<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style>
span.blue {
	color: blue;
}

span.red {
	color: red;
}
</style>
</head>
<body>
	<pre>
<script>
	var num1 = parseInt(window.prompt("숫자1 입력해 주세요!"));
	var num2 = parseInt(window.prompt("숫자2 입력해 주세요!"));
	var oper = window.prompt("연산자를 입력해 주세요!");
	var err = 0;
	if (oper == '+') {
		var result = num1 + num2;

	} else if (oper == '-') {
		var result = parseInt(num1) - parseInt(num2);

	} else if (oper == '*') {
		var result = parseInt(num1) * parseInt(num2);

	} else if (oper == '/') {
		var result = parseInt(num1) / parseInt(num2);

	} else if (oper == '%') {
		var result = parseInt(num1) % parseInt(num2);
	} else {
		err = 1;
	}

	if (err == 0) {
		document.writeln("<h2><span class=\"blue\">" + num1 + " 와 " + num2
				+ " 의 " + oper + " 연산 결과는 " + result + " 입니다.</span></h2>");
	} else {
		document
				.writeln("<h2><span class=\"red\">+, -, *, /, % 만 입력 가능</span></h2>");
	}
</script>
</pre>
</body>
</html>