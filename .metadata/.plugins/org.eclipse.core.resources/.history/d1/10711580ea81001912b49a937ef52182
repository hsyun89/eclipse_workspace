<script>
	while (true) {
		var num1 = window.prompt("숫자1 입력해 주세요!");
		var num2 = window.prompt("숫자2 입력해 주세요!");
		var oper = window.prompt("연산자를 입력해 주세요!");
	if(oper =='+'){
		var result = parseInt(num1)+(num2);
		document.writeln("<h2>"+num1 + "와" + num2 + "의 " + oper + "연산 결과는" +result + "입니다.</h2>");
	break;
	}
	}
</script>
