		<output></output>
		<script>
			var target = document.getElementsByTagName("output")[0];
			var btn = document.getElementById("dan1");

			function dan(p1) {
				for (var i = 1; i < 10; i++) {
					target.innerHTML += ("<h3>" + p1 + " * " + i + " = " + p1
							* i + "<h3>");
				}
			}

			btn.onclick = dan;
		</script>
