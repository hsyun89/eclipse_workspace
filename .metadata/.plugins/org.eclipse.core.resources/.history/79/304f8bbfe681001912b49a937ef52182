<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<script>
		while (true) {
			var num = window.prompt("체크하려는 숫자를 입력해 주세요!");
			if (num >= 1 && num <= 9 && num - Math.floor(num) == 0) {
				document.writeln(num+"단입니다.");
				break;
			} else {
				continue;
			}
		}
	</script>
</body>
</html>