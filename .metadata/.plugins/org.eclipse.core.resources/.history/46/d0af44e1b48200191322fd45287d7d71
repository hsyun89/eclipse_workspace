<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<script>
		function calc() {
			var sum = 0;
			if (arguments.length == 0) {
				return 0
			} else {
				for (var i = 0; i < arguments.length; i++) {
					sum += parseInt(arguments[i]);
				}
				if (isNaN(sum))
					return "숫자만 전달하세요"
				else
					return sum
			}
		}
		document.write(calc());
		document.write(calc(10, 20, '30'));
		document.write(calc(10, '가나다', 20));
		document.write(calc(1, 2, 3, 4, 5));

	</script>
</body>
</html>