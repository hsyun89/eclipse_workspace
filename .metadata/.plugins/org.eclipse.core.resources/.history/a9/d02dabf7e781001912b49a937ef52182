<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<pre>
	<script>
		while (true) {
			var num = window.prompt("체크하려는 숫자를 입력해 주세요!");
			if (num >= 1 && num <= 9 && num - Math.floor(num) == 0) {
				document.writeln(num + "단입니다.<hr>");
				for (var i = 1; i < 10; i++) {
					document.writeln(num + "X" + i + "=" + num * i);
				}
				break;
			} else {
				continue;
			}
		}
	</script>
	</pre>
</body>
</html>