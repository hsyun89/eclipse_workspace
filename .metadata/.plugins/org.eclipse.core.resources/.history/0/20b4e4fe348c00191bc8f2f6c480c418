package boggle;

public class Main {

	private static int num=0;
	public static void main(String[] args) {
		String[][] input = new String[][] { 
			 { "N", "N", "N", "N", "S" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "E", "Y", "E", "N" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "N", "N", "N", "N" } };
		String word = "YES";

		System.out.println(hasWord(2,2,"Y"));
	}
	static boolean hasWord(int x, int y, String word) {
		boolean result = false;

		String[][] input = new String[][] { 
			 { "N", "N", "N", "N", "S" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "E", "Y", "E", "N" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "N", "N", "N", "N" } };
		if(input[x][y].equals(word) && word.length()==1) {
			result = true;
		}
		else if(input[x][y].equals(word) && word.length()>1){
			num++;
		}
		else {
			result = false;
		}
		return result;
	}
}
