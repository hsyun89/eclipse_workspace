	<div>
		<h1>구구단(고전 이벤트 모델)</h1>
		<button id="1">1단</button>
		<button id="2">2단</button>
		<button id="3">3단</button>
		<button id="4">4단</button>
		<button id="5">5단</button>
		<button id="6">6단</button>
		<button id="7">7단</button>
		<button id="8">8단</button>
		<button id="9">9단</button>
		<output></output>
		<script>
			var print = document.getElementsByTagName("output")[0];
			
			for (var i = 1; i < 10; i++) {
				var btn = document.getElementById(i);
				btn.onclick = btnClick;
			}
			
			function btnClick(e) {
				var num = e.target.id;
				//print.innerHTML = "";
				for (var i = 1; i < 10; i++) {
					print.innerHTML += "<h3>" + num + " * " + i + " = "
							+ (num * i) + "</h3>";
				}
			}
		</script>
