package boggle;

public class Main {

	public static void main(String[] args) {
		String[][] input = new String[][] { 
			 { "N", "N", "N", "N", "S" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "E", "Y", "E", "N" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "N", "N", "N", "N" } };
		String word = "YES";
		System.out.println(hasWord(2,2,"Y"));
	}
	static boolean hasWord(int x, int y, String word) {
		boolean result = false;
		String[][] input = new String[][] { 
			 { "N", "N", "N", "N", "S" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "E", "Y", "E", "N" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "N", "N", "N", "N" } };
		if(input[x][y].equals(word)) {
			result = true;
		}
		return result;
	}
}
