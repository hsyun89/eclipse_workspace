        function sum(num) {
            if (typeof num == "number") {
                var result = (1 + num) * num / 2
                document.write(result+"<br>");
            }
            else if (typeof num == "undefined") {
                // document.write("전달된 아규먼트 없음!!");
            }
        }
        sum(10);
        sum();

        var rand= parseInt(Math.random()*6);
        if(typeof(sum(ran))=="number"){
            sum(ran);
        }
        else{
            document.write("전달된 아규먼트 없음!!");
        }

    </script>
