package gunsuyul;

public class gunsu {

	public static void main(String[] args) {
		System.out.println(gunsu(5)); // 몇번째수?

	}

	public static int gunsu(int num) {
		int result = 0;
		int idx = 0;
		int i = 1;
		while (idx < num) {
			idx += i;
			i++;
		}
		result = num-(idx-i)-1;
		return result;

	}
}
