package boggle;

public class Main {

	static int length=0;
	public static void main(String[] args) {
		String[][] input = new String[][] { 
			 { "N", "N", "N", "N", "S" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "E", "Y", "E", "N" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "N", "N", "N", "N" } };
		String word = "YES";
		System.out.println(word.substring(1));
		length = word.length(); //3
		System.out.println(hasWord(2,2,word));
	}
	static int hasWord(int x, int y, String word) {
		String[][] input = new String[][] { 
			 { "N", "N", "N", "N", "S" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "E", "Y", "E", "N" }
			, { "N", "E", "E", "E", "N" }
			, { "N", "N", "N", "N", "N" } };
		if(input[x][y].equals(word.substring(0,1)) && word.length()==1) {
			return 1;
		}
		else if(input[x][y].equals(word.substring(0,1)) && word.length()>1){
			return hasWord(x-1,y-1,word.substring(1));
		}
		else {
			return 0;
		}

	}
}
